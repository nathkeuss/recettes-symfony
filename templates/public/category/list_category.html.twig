{% extends 'public/base.html.twig' %}

{% block metatitle %}Les catégories de furieux{% endblock metatitle %}

{% block body %}

    <main>

        {% for category in categories %}
        <article>
            <p>{{ category.title }}</p>
            <a href="{{ path('show_category', {id: category.id}) }}">Voir la catégorie</a>
        </article>
        {% endfor %}
    </main>

{% endblock body %}